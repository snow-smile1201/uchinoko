<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <div class="col-12">
      <h2><%= @post.child.name %>の成長記録 </h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-4 p-5">
      <%= image_tag @post.get_post_image(300, 300), class: 'item_image' %>
    </div>
    <div class="col-md-8 p-5">

      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="width: 30%;">タイトル</th>
            <td><%= @post.title %></td>
          </tr>
          <tr>
            <th>本文</th>
            <td><%= @post.body %></td>
          </tr>
        </tbody>
      </table>

      <table class="table table-borderless">
        <tbody>
          <tr>
            <th style="width: 30%;">ジャンル</th>
            <td><%= @post.genre.name %></td>
          </tr>
          <tr>
            <th>公開ステータス</th>
            <% if @post.is_active == true %>
              <td><strong style="color: green;">公開中</strong></td>
            <% else %>
              <td><strong style="color: gray;">公開停止中</strong></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <%if @post.user == current_user %>
        <%= link_to '編集', edit_post_path(@post), class:"btn btn-success ml-3" %>
        <%= link_to '削除', post_path(@post), method: :delete, "data-confirm" => "本当に削除しますか？", class:"btn btn-danger ml-3" %>
      <% end %>
    </div>
  </div>
  <div>
    <%if @post.favorited_by?(current_user) %>
      <%=link_to post_favorites_path(@post), method: :delete do %>
      <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
      <%= @post.favorites.count %>いいね
      <% end %>
    <% else %>
      <%=link_to post_favorites_path(@post), method: :post do %>
      <i class="fas fa-heart" aria-hidden="true"></i>
      <%= @post.favorites.count %>いいね
      <% end %>
    <% end %>
    コメント数：<%= @post.post_comments.count %>
  </div>
  <div id="post_comments">
  <%= render 'public/post_comments/show', post: @post %>
</div>
<div id="comment-form">
  <%= render 'public/post_comments/form', { post: @post, post_comment: @post_comment } %>
</div>
</div>
