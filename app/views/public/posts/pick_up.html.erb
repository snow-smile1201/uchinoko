<div class="container">
  <div class="row">
    <div class="col px-5">
      <h4 class="mt-4">Pick up投稿（<%= @posts.count %>件）</h4>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <div class="card-list-container py-3 d-flex">
          <div class="col p-0">
            <div class="row">
              <% @posts.each do |post|%>
                <div class="col-sm-12 col-md-6 mb-3">
                  <%= render partial: 'index', locals:{ post: post } %>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>
</div>