<div class="container">
  <div class="row">
    <% posts.each do |post|%>
    <div class="card w-75 mx-3 mt-4 shadow-lg">
      <div class="row mx-auto mt-4">
        <div class="col-10 mx-auto">
            <p class="card-title">
              <%= link_to(post_path(post.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span><%= post.title %></span></strong>
              <% end %>
            </p>
            <%= link_to post_path(post.id) do %>
              <%= image_tag post.post_image, class:"card-img-top" %>
            <% end %>
          </div>
      </div>
        <div class="card-body row mx-auto">
          <p class="card-text"><%= post.body %></p>
        </div>
        <div class="card-footer">
          <div class="row d-flex">
            <div class="col-4 justify-content-center">
              <%= image_tag post.user.get_profile_image(55,55), class:"rounded-circle"; %><br>
              <%= link_to "#{post.user.name}", user_path(post.user.id),class:"text-dark" %>
            </div>
            <div class="col-8">
              <p>
                <i class="fa-solid fa-heart"></i>
                <%= "#{post.favorites.count}" %>
                <%= link_to post_path(post) do %>
                  <i class="fa-regular fa-comment-dots"></i>
                  <%= "#{post.post_comments.count}" %>
                <% end %>
                <% post.tags.each do |tag| %>
                <i class="fa-sharp fa-solid fa-tag"></i>
                <%= tag.name %>
                <% end %>
              </p>
            </div>
          </div>
        </div>
    </div>
    <% end %>
  </div>
</div>
