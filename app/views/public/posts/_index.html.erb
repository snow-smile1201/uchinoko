<!--TODO:カードの高さを揃える,イメージの大きさはcssでobject-fit containすることを検討-->
<div class="container">
  <div class="row">
    <div class="card w-100 h-100 d-flex shadow-lg">
      <div class="row mt-4">
        <div class="col-11 mx-auto">
          <p class="card-title h5">
            <%= link_to post_path(post.id), class: "text-reset" do %>
              <strong><i class="fa-solid fa-child-reaching"></i>  <%= post.title %></span></strong>
            <% end %>
            <div class="col text-right">
              <span>
                <%= post.created_at.strftime('%Y/%m/%d') %>
                <%if post.user == current_user %>
                  <%= link_to edit_post_path(post) do %>
                    <i class="fa-regular fa-pen-to-square ml-3"></i>
                  <% end %>
                  <%= link_to post_path(post), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
                    <i class="fa-regular fa-trash-can text-danger ml-3"></i>
                  <% end %>
                <% end %>
              </span>
            </div>
          </p>
        </div>
      </div>
        <div class="card-body row flex-column mx-auto">
          <%= link_to post_path(post.id) do %>
              <%= image_tag post.get_post_image(300, 300), class:"card-img-top" %>
            <% end %>
          <p class="card-text mt-3">
            <% post.tags.each do |tag| %>
              <%= link_to hashtag_path(tag.hashname) do %>
                <span class="d-inline-block text-truncate" style="max-width: 100px;">#<%= tag.hashname %></span>
              <% end %>
            <% end %>
          </p>
        </div>
        <div class="card-footer">
          <div class="container">
            <div class="row">
              <div class="col-3 text-center"><%= image_tag post.user.get_profile_image(80, 80), class: "rounded-circle" %></div>
              <div class="col-9">
                <div class="row">Posted by: <strong><%= link_to "#{post.user.name}", user_path(post.user.id), class: "text-reset" %></strong></div>
                <div class="row mt-2">For: <strong><%= post.child.name %></strong></div>
                <div class="row mt-2">
                  <div id="favorite_button_<%= post.id %>" class="col">
                    <%= render 'public/favorites/favorite', post: post %>
                  </div>
                  <div class="col"><i class="fa-regular fa-comment-dots"></i><%= "#{post.post_comments.count}" %></div>
                  <div class="col"><i class="fa-solid fa-tags"></i><%= post.genre.name %></div>
                </div>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</div>
