
  <% posts.each do |post|%>
  <div class="card w-25 mx-auto mt-4 shadow-lg">
    <div class="row mx-auto mt-4">
      <div class="col-10">
          <p class="card-title">
            <%= link_to(post_path(post.id), class:"text-dark") do %>
            <strong><i class="far fa-flag"></i><span><%= post.title %></span></strong>
            <% end %>
          </p>
          <%= link_to post_path(post.id) do %>
            <%= image_tag post.get_post_image(300,300), class:"card-image-top"; %>
          <% end %>
        </div>
    </div>
    <div class="card-body">
      <div class="row">
        <div class="col-2">
          <!--%= image_tag post_image.user.get_profile_image(50,50), class:"mt-3 rounded-circle"; %>-->
        </div>
        <div class="col-10">
          <p class="card-text"><%= post.body %></p>
          <span><i class="fas fa-user"></i>By <%= post.user.name %></span>
          <span><%= link_to "#{post.post_comments.count}コメント", post_path(post.id),class:"text-dark" %></span>
        </div>
      </div>
    </div>
</div>
<% end %>