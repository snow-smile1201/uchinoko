<div class="card-list-container py-5 d-flex">
  <div class="offset-md-1 col-md-2">
    <table class="table table-sm">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.posts.count %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div class="">
  <%= render 'index', posts: @posts %>
</div>
