    <table class="table table-sm">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= genre.posts.count %></td>
          </tr>
        <%end%>
      </tbody>
    </table>
  </div>
  <div class="col-md-8">
    <%= render 'index', posts: @posts %>
  </div>
</div>
