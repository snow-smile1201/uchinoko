<div class="container px-sm-0-md-5">
  <div class="row m-2">
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %> mx-auto"><%= message %></div>
    <% end %>
  </div>
  <div class="row">
    <div class="col"><h4>プロフィール編集</h4></div>
  </div>
  <div class="row px-sm-0-md-5">
    <div class="col-md-8 px-sm-0-md-5">
      <%= render "admin/shared/error_messages", resource: @user %>
      <%= form_with model: @user, url: user_path(@user), method: :patch do |f| %>
      <div class="table-responsive">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :profile_image, "画像：" %><%= f.file_field :profile_image, accept: "image/jpeg" %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "名前 (ニックネーム)" %>
                  <%= f.text_field :name, class: "form-control" %>
              </td>
              <td></td>
            </tr>
            <tr>
              <td>
                <%= f.label :policy, "My policy" %>
                <%= f.text_area :policy, rows: 7, placeholder: "子育ての基本方針、ルール、気をつけていることなどを記入してください。", class: "form-control" %>
              </td>
            </tr>
            <tr>
              <td class="d-flex justify-content-end"><%= f.submit '更新',class:"btn btn-success" %></td>
            </tr>
          </tbody>
        </table>
      </div>
      <% end %>
    </div>
  </div>
</div>