<div class="container px-5 px-sm-0">
  <div class="row my-4 ml-3">
    <h2>Profile</h2>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render "public/users/info", user: @user %>
    </div>
    <div class="col-md-8 mx-auto">
      <%= render "admin/shared/error_messages", resource: @user %>
      <%= render "public/children/index", children: @children %>
      <table class="table">
        <tbody>
          <% @user.posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post.id) do %>
                  <i class="fa-solid fa-child-reaching"></i> <%= post.title %>
                <% end %>
              </td>
              <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
              <td><i class="fa-solid fa-heart" style="color: red;"></i> <%= post.favorites.count %></td>
              <td><i class="fa-regular fa-comment-dots"></i> <%= post.post_comments.count %></td>
              <td><i class="fa-solid fa-key"></i> <%= post.is_active? %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <%= link_to "退会", confirm_withdraw_path(@user) %>
  </div>
</div>