<div class="container mt-4">
  <div class="row">
    <div class="col-md-6">
      <div class="card w-100 mx-auto mb-4 shadow-lg">
        <div class="row p-3">
          <div class="col-10 mx-auto">
            <p class="card-title h5 text-left">
              <strong><%= @user.name %></strong>
            </p>
            <p class="text-right">
              -since <%= @user.created_at.strftime('%Y/%m/%d') %>
              <% unless @user.guest_user? || current_user != @user %>
                <%= link_to edit_user_path(@user) do %>
                  <i class="fa-regular fa-pen-to-square ml-3"></i>
                <% end %>
                  <%= link_to confirm_withdraw_path(@user) do %>
                <i class="fa-regular fa-trash-can text-danger ml-3"></i>
                <% end %>
              <% end %>
            </p>
            <p class="mx-auto text-center"><%= image_tag @user.get_profile_image(100, 100), class:"img-rounded img-responsive" %></p>
          </div>
        </div>
          <div class="card-body row mx-auto p-3">
            <p class="card-text">
              <%= render "public/users/info", user: @user %>
              <strong class="mt-3">uchinoko</strong>
              <%= render "public/children/index", children: @children %>
            </p>
          </div>
          <div class="card-footer">
            <div class="row btn-wrapper justify-content-center">
              <% if current_user == @user %>
                <div class="col-4">
                  <%= link_to children_path, class: "btn btn-sm btn-block btn-info" do %>
                    + new <i class="fa-solid fa-child-reaching"></i>
                  <% end %>
                </div>
                  <% unless @user.children.empty? %>
                    <div class="col-4">
                      <%= link_to new_post_path, class: "btn btn-sm btn-block btn-success" do %>
                        + new <i class="fa-solid fa-file-signature"></i>
                      <% end %>
                    </div>
                  <% end %>
              <% else %>
                <div class="col-4"><%= render "public/user_relationships/btn", user: @user %></div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
    <div class="col-md-6 mx-auto">
      <table class="table table-sm table-borderless">
        <tbody>
          <% if @posts.empty? %>
            <tr>
              <td>投稿はありません。</td>
            </tr>
          <% else %>
            <% @posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to post_path(post.id) do %>
                    <i class="fa-solid fa-child-reaching"></i> <span class="d-inline-block text-truncate" style="max-width: 300px;"><%= post.title %></span>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
                <td><i class="fa-solid fa-heart" style="color: red;"></i> <%= post.favorites.count %></td>
                <td><i class="fa-regular fa-comment-dots"></i> <%= post.post_comments.count %></td>
                <td><i class="fa-solid fa-key"></i> <%= post.is_active? %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>