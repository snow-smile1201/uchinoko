<div class="container px-5 px-sm-0">
  <div class="row my-4 ml-3">
    <h2>ユーザー詳細</h2>
  </div>
  <div class="row">
    <div class="col-md-3">
      <%= render "public/users/info", user: @user %>
    </div>
    <div class="col-md-8 mx-auto">
      <%= render "admin/shared/error_messages", resource: @user %>
      <%= render "public/children/index", children: @children %>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>投稿日</th>
            <th>いいね</th>
            <th>閲覧数</th>
          </tr>
        </thead>
        <tbody>
          <% @user.posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path(post.id) do %>
                  <%= post.title %>
                <% end %>
              </td>
              <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= post.favorites.count %></td>
              <td><%= post.post_comments.count %></td>
              <td>閲覧数カウント</td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>