<% if current_user != user %>
 <% if current_user.following?(user) %>
   <%= link_to "Unfollow", user_user_relationships_path(user.id), method: :delete, class: "btn btn-sm btn-block btn-danger" %>
 <% else %>
   <%= link_to "Follow", user_user_relationships_path(user.id), method: :post, class: "btn btn-sm btn-block btn-info" %>
 <% end %>
<% end %>