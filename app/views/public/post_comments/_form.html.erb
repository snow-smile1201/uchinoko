<%= form_with model: [post, post_comment], local: false do |f| %>
  <div class="row mt-5">
    <div class="col-md-10">
      <div class="form d-flex">
        <%= f.text_field :comment, placeholder: "コメントを記入",class: "form-control", id:"comment_form" %>
        <%= button_tag type: "submit", class: "btn btn-default" do %>
         <i class="fa-regular fa-paper-plane text-secondary"></i>
        <% end %>
      </div>
    </div>
  </div>
<% end %>