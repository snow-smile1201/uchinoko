<div class='container mt-5'>
  <h2 class='text-left ml-5 mb-md-3 mb-lg-5'>
    <span class='bg-light p-2'>新規登録</span>
  </h2>
  <div class="row m-2">
    <% flash.each do |message_type, message| %>
      <div class="flash-message <%= message_type %> mx-auto"><%= message %></div>
    <% end %>
    <%= render "public/shared/error_messages", resource: resource %>
  </div>
  <div>
     <%= form_with(model: resource, url: registration_path(resource_name)) do |f| %>
        <div class="form-group row">
          <label for='name' class='col-sm-1 col-form-label'>名前</label>
          <label for="name" class="col-sm-2 col-form-label text-right custom-label"></label>
          <div class="col-sm-3">
            <%= f.text_field :name, class: 'form-control', placeholder: 'User name', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label for="email" class="col-sm-3 col-form-label">メールアドレス</label>
          <div class="col-sm-3">
            <%= f.text_field :email, class: 'form-control', placeholder: 'Email', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label for="password" class="col-sm-3 col-form-label">パスワード（6文字以上）</label>
          <div class="col-sm-3">
            <%= f.password_field :password, class: 'form-control', placeholder: 'Password', required: true %>
          </div>
        </div>
        <div class="form-group row">
          <label for="password_confirmation" class="col-sm-3 col-form-label">パスワード確認</label>
          <div class="col-sm-3">
            <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation', required: true %>
          </div>
        </div>
        <div class="form-group row mt-3">
          <div class="col-sm-3"></div>
          <div class="col-sm-3">
            <%= f.submit '新規登録', class: 'btn btn-success btn-block' %>
          </div>
        </div>
      <% end %>
      <h4 class="text-left ml-5 mb-3">
        <span class='bg-light p-2'>登録済みの方</span>
      </h4>
      <div class="d-flex ml-4">
        <div class="mx-1"></div>
        <span><%= link_to 'こちら', new_user_session_path %>からログインしてください</span>
      </div>
  </div>
</div>
