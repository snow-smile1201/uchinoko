<div class="container px-sm-0 px-5">
  <div class="row my-4">
    <h3>うちの子追加</h3>
  </div>
  <div class="row px-sm-0 px-5">
    <div class="col-md-8 px-5 px-sm-0">
      <%= render "admin/shared/error_messages", resource: @child %>
      <%= form_with model: @child, url: children_path, method: :post do |f| %>
        <%= render "public/children/form", child: @child, f: f %>
      <% end %>
    </div>
  </div>
  <div class="row px-sm-0 px-5">
    <div class="col-md-8 px-5 px-sm-0">
      <%= render 'index', children: @children %>
    </div>
  </div>
</div>