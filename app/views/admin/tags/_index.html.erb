 <table class="table table-hover">
    <thead>
      <tr>
        <th>ハッシュタグ</th>
        <th>投稿数</th>
        <th>いいね数</th>
        <th>コメント数</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% tags.each do |tag| %>
        <tr>
          <td>
            <!--タグの詳細ページ実装予定-->
            #<%= tag.hashname %>
          </td>
          <td><%= tag.posts.count %></td>
          <td>
            <!--タグに紐づく投稿のいいね数をカウント-->
            <% @total_favorites = 0 %>
            <% tag.posts.each do |post| %>
              <% @total_favorites += post.favorites.count %>
            <% end %>
            <%= @total_favorites %>
          </td>
          <td>
            <% @total_comments = 0 %>
            <% tag.posts.each do |post| %>
              <% @total_comments += post.post_comments.count %>
            <% end %>
            <%= @total_comments %>
          </td>
          <td></td>
          <td><%= %></td>
          <td><%=  %></td>
          <td><%=  %></td>
        </tr>
      <% end %>
    </tbody>
  </table>